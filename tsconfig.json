{
    "compilerOptions": {
        "outDir": "app",
        "rootDir": "app",
        "module": "commonjs",
        "target": "es5",
        "inlineSourceMap": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "noEmitOnError": true
    },
    "files": [
        "node_modules/tns-core-modules/tns-core-modules.d.ts",
        "app/app.ts",
        "app/compat.d.ts",
        "app/main-page.ts"
    ],
    "filesGlob": [
        "node_modules/tns-core-modules/tns-core-modules.d.ts",
        "app/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "platforms"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}